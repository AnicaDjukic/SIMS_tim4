<Page x:Class="Bolnica.Forms.FormLekoviTerapijePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bolnica.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="630" d:DesignWidth="1400"
      Title="FormLekoviTerapijePage">

    <Grid x:Name="Izvestaj">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0" Width="700" Height="50">
            <TextBlock Text="Terapija za sedmicu: " Margin="80,10,0,0" Height="40" Width="200" FontSize="20"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Height="50" Width="100" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Right">
                <Label.Content>
                    <Binding Path="PrviDanSedmice"></Binding>
                </Label.Content>
            </Label>
            <TextBlock Text="-" FontSize="20" Height="50" Margin="0,10,0,0"></TextBlock>
            <Label Height="50" Width="100" FontSize="20" VerticalContentAlignment="Center">
                <Label.Content>
                    <Binding Path="PoslednjiDanSedmice"></Binding>
                </Label.Content>
            </Label>
        </StackPanel>

        <DataGrid Name="sedmicnaTerapija" ItemsSource="{Binding SedmicnaTerapija}" HorizontalAlignment="Center" VerticalAlignment="Top" 
                  Margin="0,60,0,0" Height="500" Width="1000" AutoGenerateColumns="False" SelectionUnit="FullRow" RowHeight="70"
                  FontSize="16" SelectionMode="Single" IsReadOnly="True" Background="LightBlue">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="LightBlue"></Setter>
                    <Setter Property="FontWeight" Value="SemiBold"></Setter>
                    <Setter Property="BorderThickness" Value="1,1,1,2"></Setter>
                    <Setter Property="BorderBrush" Value="black"></Setter>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
                <Style TargetType="DataGridCell">
                    <Style.Setters>
                        <Setter Property="TextBlock.TextAlignment" Value="Center" />
                    </Style.Setters>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Vreme" Binding="{Binding Vreme}" Width="*">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderBrush" Value="Black" />
                            <Setter Property="BorderThickness" Value="1,0,1,0" />
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Ponedeljak" Binding="{Binding Ponedeljak}" Width="*"/>
                <DataGridTextColumn Header="Utorak" Binding="{Binding Utorak}" Width="*"/>
                <DataGridTextColumn Header="Sreda" Binding="{Binding Sreda}" Width="*"/>
                <DataGridTextColumn Header="Četvrtak" Binding="{Binding Cetvrtak}" Width="*"/>
                <DataGridTextColumn Header="Petak" Binding="{Binding Petak}" Width="*"/>
                <DataGridTextColumn Header="Subota" Binding="{Binding Subota}" Width="*"/>
                <DataGridTextColumn Header="Nedelja" Binding="{Binding Nedelja}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Stampaj" Height="40" Width="100" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,100,0,0" Click="Button_Click_Stampaj"/>
    </Grid>
</Page>
