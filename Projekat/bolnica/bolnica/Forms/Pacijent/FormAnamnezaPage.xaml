<Page x:Class="Bolnica.Forms.FormAnamnezaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bolnica.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="580" d:DesignWidth="1400"
      Title="FormAnamnezaPage">

    <Grid>
        <DockPanel Margin="150,20,0,0" Width="540" Height="460" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Border BorderThickness="5" BorderBrush="Aquamarine"></Border>
        </DockPanel>
        <DockPanel Margin="0,20,150,0" Width="540" Height="460" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Border BorderThickness="5" BorderBrush="Aquamarine"></Border>
        </DockPanel>
        <StackPanel Orientation="Horizontal" Margin="150,20,0,0" Width="540" Height="230" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Label Content="Simptomi:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" FontSize="16"></Label>
            <TextBox Text="{Binding Path=Anamneza.Simptomi}" HorizontalAlignment="Right" VerticalAlignment="Top" Width="400" Height="180" Margin="20,20,20,20" IsReadOnly="True"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="150,250,0,0" Width="540" Height="230" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Label Content="Dijagnoza:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" FontSize="16"></Label>
            <TextBox Text="{Binding Path=Anamneza.Dijagnoza}" HorizontalAlignment="Right" VerticalAlignment="Top" Width="400" Height="180" Margin="20,20,20,20" IsReadOnly="True"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="0,20,150,0" Width="540" Height="460" HorizontalAlignment="Right" VerticalAlignment="Top">
            <DataGrid Name="lekoviPacijentaGrid" ItemsSource="{Binding LekoviPacijenta}" HorizontalAlignment="Center" VerticalAlignment="Top" 
                  Margin="20,20,20,20" Height="350" Width="500" AutoGenerateColumns="False" SelectionUnit="FullRow" RowHeight="40"
                  FontSize="16" SelectionMode="Single" IsReadOnly="True" VerticalScrollBarVisibility="Visible" Background="LightBlue">
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="#FF00DFFF"></Setter>
                        <Setter Property="FontWeight" Value="SemiBold"></Setter>
                        <Setter Property="BorderThickness" Value="0,0,1,2"></Setter>
                        <Setter Property="BorderBrush" Value="black"></Setter>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                    <Style TargetType="DataGridCell">
                        <Style.Setters>
                            <Setter Property="TextBlock.TextAlignment" Value="Center" />
                        </Style.Setters>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Naziv" Binding="{Binding lek.Naziv}" Width="*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Datum prepisivanja" Binding="{Binding DatumIzdavanja, StringFormat='dd.MM.yyyy'}" MinWidth="170"></DataGridTextColumn>
                    <DataGridTextColumn Header="Datum prekida" Binding="{Binding Trajanje, StringFormat='dd.MM.yyyy'}" MinWidth="170"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Vidi detalje" Height="35" Width="100" Click="Button_Click_Vidi_Detalje"></Button>
        </StackPanel>
    </Grid>
</Page>
