<Window x:Class="bolnica.Forms.FormUpravnik"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bolnica.Forms"
        xmlns:dislocal ="clr-namespace:Model.Prostorije"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" 
        xmlns:dislocal1="clr-namespace:Bolnica.Model.Prostorije"
        mc:Ignorable="d"
        Title="Upravnik" Height="450" Width="800" ResizeMode="NoResize" WindowStyle="SingleBorderWindow"
        Background="LightCyan" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="GetEnumValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="dislocal:TipProstorije"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid.Resources>
            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="DarkCyan" />
        </Grid.Resources>

        <Menu DockPanel.Dock="Top" Grid.ColumnSpan="2" Grid.Row="0">
            <MenuItem Header="_Profil" FontSize="14">
                <MenuItem Header="Vidi profil" FontSize="14">
                    <MenuItem.Icon>
                        <Image Source="../Images/woman-profile.png" Stretch="Fill"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Izmeni profil" FontSize="14" />
                <Separator />
                <MenuItem Header="_Exit" FontSize="14"/>
            </MenuItem>
            <MenuItem Header="_Podešavanja" FontSize="14">
                <MenuItem Header="_Tamna tema" FontSize="14"/>
                <MenuItem Header="_Jezik" FontSize="14" />
                <Separator />
                <MenuItem Header="_Exit" FontSize="14" />
            </MenuItem>
            <MenuItem Header="_Pomoć" FontSize="14">
                <MenuItem Header="_Pomoć" />
                <MenuItem Header="_O aplikaciji" FontSize="14" />
                <Separator />
                <MenuItem Header="_Exit" FontSize="14"/>
            </MenuItem>
        </Menu>

        <!--<StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
            <TextBox Height="20" Width="150"/>
            <Button Height="20" VerticalAlignment="Bottom" >
                <Image Source="../Images/search.png" Width="15" Height="20" HorizontalAlignment="Left"/>
            </Button>
        </StackPanel>-->
        
        <TabControl Grid.Row="2" Grid.Column="0" x:Name="Tabovi" Height="320" BorderBrush="LightCyan" Background="LightCyan" 
                    HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0">
            <TabItem Header="PROSTORIJE">
                <StackPanel>
                    <DataGrid x:Name="dataGridProstorije" ItemsSource="{Binding Prostorije}" IsReadOnly="True" SelectionMode="Single" 
                  AutoGenerateColumns="False" Height="250" HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn x:Name="BrojProstorije" Header="BROJ PROSTORIJE" Binding="{Binding BrojProstorije}" Width="*"/>
                            <DataGridTextColumn Header="SPRAT" Binding="{Binding Sprat}" Width="*"/>
                            <DataGridTextColumn Header="KVADRATURA" Binding="{Binding Kvadratura}" Width="*"/>
                            <DataGridComboBoxColumn Header="TIP PROSTORIJE" ItemsSource="{Binding Source={StaticResource GetEnumValues}}" Width="*" 
                                        SelectedValueBinding="{Binding TipProstorije}" />
                            <DataGridCheckBoxColumn Header="ZAUZETA" Binding="{Binding Zauzeta}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Margin="10" Height="30" Width="150">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../Images/recycle.png" Width="25" Height="25" HorizontalAlignment="Left"/>
                            <TextBlock VerticalAlignment="Center" Margin="10,0,0,0" Text="RENOVIRANJE"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </TabItem>
            <TabItem Header="OPREMA">
                <DataGrid x:Name="dataGridOprema" ItemsSource="{Binding Oprema}" IsReadOnly="True" SelectionMode="Single" 
                  AutoGenerateColumns="False" Height="250" VerticalAlignment="Top" HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn x:Name="Sifra" Header="ŠIFRA" Binding="{Binding Sifra}" Width="*"/>
                        <DataGridTextColumn Header="NAZIV" Binding="{Binding Naziv}" Width="*"/>
                        <DataGridComboBoxColumn Header="TIP OPREME" ItemsSource="{Binding Source={dislocal1:EnumBindingSourceExtension {x:Type dislocal1:TipOpreme}}}" SelectedValueBinding="{Binding TipOpreme}" Width="*"/>
                        <DataGridTextColumn Header="KOLIČINA" Binding="{Binding Kolicina}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" Margin="0,35,20,0">
            <Button Margin="10,0,10,10">
                <StackPanel Width="125" Orientation="Horizontal">
                    <Image Source="../Images/notification.png" Width="25" Height="25" HorizontalAlignment="Left"/>
                    <TextBlock VerticalAlignment="Center" Margin="10,0,0,0" Text="OBAVEŠTENJA"/>
                </StackPanel>
            </Button>
            <Button Margin="10">
                <StackPanel Width="125" Orientation="Horizontal">
                    <Image Source="../Images/diamond.png" Width="25" Height="25" HorizontalAlignment="Left"/>
                    <TextBlock VerticalAlignment="Center" Margin="10,0,0,0" Text="CENOVNIK"/>
                </StackPanel>
            </Button>
            <Button Margin="10">
                <StackPanel Width="125" Orientation="Horizontal">
                    <Image Source="../Images/document.png" Width="25" Height="25" HorizontalAlignment="Left"/>
                    <TextBlock VerticalAlignment="Center" Margin="10,0,0,0" Text="ZAHTEVI"/>
                </StackPanel>
            </Button>
            <Button Margin="10">
                <StackPanel Width="150" Orientation="Horizontal">
                    <Image Source="../Images/shopping.png" Width="25" Height="25" HorizontalAlignment="Left"/>
                    <TextBlock VerticalAlignment="Center" Margin="10,0,0,0" Text="PONUDE I OGLASI"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <ToolBar Grid.Row="1" Grid.ColumnSpan="2">
            <Button Click="Button_Click_Dodaj">
                <StackPanel Orientation="Horizontal">
                    <Image Source="../Images/add.png" Width="20" Height="25"/>
                    <TextBlock Text="Dodaj" FontSize="14" VerticalAlignment="Center" Margin="5,0,0,0" />
                </StackPanel>
            </Button>
            <Separator/>
            <Button Click="Button_Click_Prikazi">
                <StackPanel Orientation="Horizontal">
                    <Image Source="../Images/view-details.png" Width="20" Height="25"/>
                    <TextBlock  Text="Prikaži" FontSize="14" VerticalAlignment="Center" Margin="5,0,0,0" />
                </StackPanel>
            </Button>
            <Separator/>
            <Button Click="Button_Click_Izmeni">
                <StackPanel Orientation="Horizontal">
                    <Image Source="../Images/edit.png" Width="20" Height="25"/>
                    <TextBlock Text="Izmeni" FontSize="14" VerticalAlignment="Center" Margin="5,0,0,0" />
                </StackPanel>
            </Button>
            <Separator/>
            <Button Click="Button_Click_Obrisi">
                <StackPanel Orientation="Horizontal">
                    <Image Source="../Images/delete-bin.png" Width="20" Height="25"/>
                    <TextBlock Text="Obriši" FontSize="14" VerticalAlignment="Center" Margin="5,0,0,0" />
                </StackPanel>
            </Button>
        </ToolBar>

        <StatusBar Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Right">
            <StatusBarItem>
                <TextBlock Text="Vreme:"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock x:Name="Vreme"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="Datum:"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock x:Name="Datum"/>
            </StatusBarItem>
        </StatusBar>

        <!--<Border BorderBrush="Black"
            BorderThickness="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Grid.Row="2" Height="20"
                Margin="0,5,15,0">

            <StackPanel
                    Orientation="Horizontal">

                <Image Source="../Images/search.png" 
                   Height="18"/>
                <TextBlock Text="Hello, I am a text block!"
                       Margin="3 0 0 0" IsEnabled="True"/>

            </StackPanel>


        </Border>-->


    </Grid>

</Window>
