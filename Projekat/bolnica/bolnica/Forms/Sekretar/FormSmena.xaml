<Window x:Class="Bolnica.Forms.Sekretar.FormSmena"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bolnica.Forms.Sekretar"
        mc:Ignorable="d"
        Title="Bolnica" Height="360" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Content="Današnji datum:" HorizontalAlignment="Left" Margin="85,78,0,0" VerticalAlignment="Top"/>
        <Label Content="Početak smene:" HorizontalAlignment="Left" Margin="88,108,0,0" VerticalAlignment="Top"/>
        <Label Content="Kraj smene:" HorizontalAlignment="Left" Margin="109,138,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="dpDanasnjiDatum" HorizontalAlignment="Left" Margin="180,80,0,0" VerticalAlignment="Top" Width="150"/>
        <ComboBox x:Name="comboPocetakSmene" Margin="180,110,0,0" VerticalAlignment="Top" Width="150" HorizontalAlignment="Left"/>
        <ComboBox x:Name="comboKrajSmene" Margin="180,140,0,0" VerticalAlignment="Top" Width="150" HorizontalAlignment="Left"/>
        <Button Content="Potvrdi" Height="20" Width="80" Margin="0,190,110,0" Click="Potvrdi"/>
        <Button Content="Zatvori" Height="20" Width="80" Margin="110,190,0,0" Click="Zatvori"/>
    </Grid>
</Window>
