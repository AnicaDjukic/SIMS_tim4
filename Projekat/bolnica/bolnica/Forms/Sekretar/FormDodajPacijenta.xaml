            </TextBlock.Style>
        </TextBlock>
        <TextBox x:Name="txtZanimanje" HorizontalAlignment="Left" Margin="525,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210"/>
        <TextBlock Name="plhZanimanje"  IsHitTestVisible="False" Text="trgovac" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="528,159,0,0" Foreground="DarkGray">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=txtZanimanje}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <ComboBox Name="comboBracniStatus" SelectedIndex="0" HorizontalAlignment="Left" Margin="525,189,0,0" VerticalAlignment="Top" Width="210">
            <ComboBoxItem Content="Neoženjen/Neudata"/>
            <ComboBoxItem Content="Oženjen/Udata"/>
            <ComboBoxItem Content="Udovac/Udovica"/>
            <ComboBoxItem Content="Razveden/Razvedena"/>
        </ComboBox>
        <CheckBox Name="checkOsiguranje" HorizontalAlignment="Left" Margin="525,219,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.127,0.621"/>
        <Button x:Name="btnAlergeni" Content="Dodaj" Height="20" Width="80" Margin="150,309,554,0" VerticalAlignment="Top" Click="Button_Click_Dodaj_Alergene"/>
        <Button x:Name="btnKreiraj" Content="Kreiraj" Height="20" Width="80" Margin="220,366,360,38" Click="Button_Click"/>
        <Button Content="Zatvori" Height="20" Width="80" Margin="360,366,220,38" Click="Zatvori"/>
    </Grid>
</Window>