                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <TextBox x:Name="txtKorisnickoIme" HorizontalAlignment="Left" Margin="525,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210"/>
        <TextBlock Name="plhKorisnickoIme" IsHitTestVisible="False" Text="marko" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="530,69,0,0" Foreground="DarkGray">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
